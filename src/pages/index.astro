---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Hoop Central - Elevate Your Game";
const pageDescription = "Discover expert basketball guides, dynamic videos, and pro tips at Hoop Central. Level up your skills with bold, urban-inspired content designed for aspiring athletes.";

const features = [
  {
    icon: "fas fa-chalkboard-teacher",
    title: "Expert Guides",
    description: "Dive deep into techniques from seasoned coaches and NBA scouts. From perfecting your crossover to mastering defensive stances, we've got the breakdowns you need."
  },
  {
    icon: "fas fa-video",
    title: "Dynamic Videos",
    description: "Watch high-energy tutorials with slow-motion analysis and AR overlays. See the pros in action and replicate their moves on your local court."
  },
  {
    icon: "fas fa-dumbbell",
    title: "Pro Tips & Drills",
    description: "Quick, actionable advice to improve your game instantly. Our drills are designed to maximize efficiency and enhance your court presence."
  }
];

const testimonials = [
  {
    quote: "Hoop Central transformed my game. The video breakdowns helped me understand techniques I'd been struggling with for years.",
    author: "Marcus T.",
    role: "College Point Guard"
  },
  {
    quote: "The pro drills are insane. My shooting percentage improved by 15% in just 3 weeks.",
    author: "Jasmine L.",
    role: "High School Starter"
  },
  {
    quote: "Finally, a resource that speaks to real players. The tech integration makes learning fun and effective.",
    author: "Devon S.",
    role: "Street League Champion"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <style>
  {'
      @keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
      }
      
      @keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
        100% { transform: translateY(0px); }
      }
      
      .hero-gradient {
        background: linear-gradient(135deg, #000000 0%, #10b981 100%);
      }
      
      .neon-border {
        box-shadow: 0 0 15px #10b981, 0 0 30px #10b981;
      }
      
      .pulse-animation {
        animation: pulse 2s infinite;
      }
      
      .float-animation {
        animation: float 3s ease-in-out infinite;
      }
      
      .feature-card {
        transition: all 0.3s ease;
      }
      
      .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
      }
      
      .testimonial-card {
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      }
      
      .testimonial-card:hover {
        transform: scale(1.03);
      }
    '}
</style>

  <!-- Hero Section -->
  <section class="hero-gradient text-white py-24 md:py-32 relative overflow-hidden">
    <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-20"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
          <span class="block">Welcome to Hoop Central</span>
          <span class="block mt-2 text-transparent bg-clip-text bg-gradient-to-r from-[#10b981] to-[#0ea5e9]">
            Elevate Your Game
          </span>
        </h1>
        
        <p class="text-xl md:text-2xl mb-10 max-w-3xl text-gray-100">
          Expert basketball guides, dynamic videos, and pro tips at Hoop Central. Level up your skills with bold, urban-inspired content designed for aspiring athletes.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <button class="bg-[#10b981] hover:bg-[#059669] text-black font-bold py-4 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105 pulse-animation">
            Explore Guides
          </button>
          <button class="border-2 border-[#10b981] text-[#10b981] hover:bg-[#10b981] hover:text-black font-bold py-4 px-8 rounded-full text-lg transition-all duration-300">
            Watch Videos
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-gray-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Why Choose Hoop Central?</h2>
        <div class="w-24 h-1 bg-[#10b981] mx-auto"></div>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {features.map((feature, index) => (
          <div class="feature-card bg-gray-800 p-8 rounded-xl border border-gray-700 neon-border">
            <div class="w-16 h-16 rounded-full bg-gray-900 flex items-center justify-center mb-6 text-[#10b981] text-2xl">
              <i class={feature.icon}></i>
            </div>
            <h3 class="text-2xl font-bold text-white mb-4">{feature.title}</h3>
            <p class="text-gray-300">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-20 bg-black">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-4xl md:text-5xl font-bold text-[#10b981] mb-2">10K+</div>
          <div class="text-gray-400">Active Players</div>
        </div>
        <div>
          <div class="text-4xl md:text-5xl font-bold text-[#10b981] mb-2">500+</div>
          <div class="text-gray-400">Video Guides</div>
        </div>
        <div>
          <div class="text-4xl md:text-5xl font-bold text-[#10b981] mb-2">24/7</div>
          <div class="text-gray-400">Learning Access</div>
        </div>
        <div>
          <div class="text-4xl md:text-5xl font-bold text-[#10b981] mb-2">99%</div>
          <div class="text-gray-400">Success Rate</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-20 bg-gradient-to-br from-gray-900 to-black">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Player Success Stories</h2>
        <div class="w-24 h-1 bg-[#10b981] mx-auto"></div>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div class="testimonial-card bg-gray-800 p-8 rounded-xl border border-gray-700">
            <div class="text-yellow-400 text-3xl mb-4">★★★★★</div>
            <p class="text-gray-300 italic mb-6">"{testimonial.quote}"</p>
            <div>
              <div class="font-bold text-white">{testimonial.author}</div>
              <div class="text-[#10b981] text-sm">{testimonial.role}</div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-black to-gray-900">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Level Up Your Game?</h2>
        <p class="text-xl text-gray-300 mb-10">Join thousands of players who have transformed their basketball journey with Hoop Central.</p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="bg-[#10b981] hover:bg-[#059669] text-black font-bold py-4 px-10 rounded-full text-lg transition-all duration-300 transform hover:scale-105">
            Get Started Free
          </button>
          <button class="border-2 border-[#10b981] text-[#10b981] hover:bg-[#10b981] hover:text-black font-bold py-4 px-10 rounded-full text-lg transition-all duration-300">
            View Subscription Plans
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer Section -->
  <footer class="py-12 bg-black border-t border-gray-800">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="mb-6 md:mb-0">
          <h3 class="text-2xl font-bold text-white">Hoop Central</h3>
          <p class="text-gray-400 mt-2">Elevate Your Game</p>
        </div>
        <div class="flex space-x-6">
          <a href="#" class="text-gray-400 hover:text-[#10b981] transition-colors">
            <i class="fab fa-facebook-f"></i>
          </a>
          <a href="#" class="text-gray-400 hover:text-[#10b981] transition-colors">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" class="text-gray-400 hover:text-[#10b981] transition-colors">
            <i class="fab fa-instagram"></i>
          </a>
          <a href="#" class="text-gray-400 hover:text-[#10b981] transition-colors">
            <i class="fab fa-youtube"></i>
          </a>
        </div>
      </div>
      <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-500">
        <p>&copy; {new Date().getFullYear()} Hoop Central. All rights reserved.</p>
      </div>
    </div>
  </footer>
</Layout>