---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/videos', label: 'Videos' },
  { href: '/guides', label: 'Guides' },
  { href: '/tutorials', label: 'Tutorials' },
  { href: '/blog', label: 'Blog' }
];
---

<nav class="bg-black shadow-lg">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-green-500">Hoop Central</a>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex gap-6">
        {navItems.map((item) => (
          <a 
            href={item.href} 
            class="text-white hover:text-green-500 transition-all duration-300 transform hover:scale-105"
          >
            {item.label}
          </a>
        ))}
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden text-white">
        <i class="fas fa-bars text-2xl"></i>
      </button>
    </div>
    
    <!-- Mobile Menu (hidden by default) -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 flex flex-col gap-4">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class="text-white hover:text-green-500 transition-all duration-300 py-2 border-b border-gray-800"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<!-- Client-side JavaScript for mobile toggle -->
<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css');
  
  nav {
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.2);
  }
  
  a:hover {
    text-shadow: 0 0 8px rgba(16, 185, 129, 0.6);
    transition: all 0.3s ease-in-out;
  }
</style>